{
  "name": "multisig-wallet",
  "version": "1.0.0",
  "description": "Advanced Multi-Signature Wallet for Ethereum and Solana",
  "main": "dist/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:contracts": "hardhat test",
    "test:integration": "hardhat run scripts/test-deployment.ts",
    "compile": "hardhat compile",
    "typechain": "hardhat typechain",
    "deploy:localhost": "hardhat deploy --network localhost",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "deploy:goerli": "hardhat deploy --network goerli",
    "deploy:mainnet": "hardhat deploy --network mainnet",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:goerli": "hardhat verify --network goerli",
    "verify:mainnet": "hardhat verify --network mainnet",
    "test:sepolia": "hardhat run scripts/test-deployment.ts --network sepolia",
    "test:goerli": "hardhat run scripts/test-deployment.ts --network goerli",
    "solana:build": "anchor build",
    "solana:deploy:devnet": "anchor deploy --provider.cluster devnet",
    "solana:deploy:testnet": "anchor deploy --provider.cluster testnet",
    "solana:deploy:mainnet": "anchor deploy --provider.cluster mainnet-beta",
    "solana:test": "anchor test",
    "gas-report": "REPORT_GAS=true hardhat test",
    "size-contracts": "hardhat size-contracts",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean && rm -rf .next && rm -rf node_modules/.cache",
    "setup:testnet": "node scripts/setup-testnet.js",
    "faucet:sepolia": "echo 'Visit https://sepoliafaucet.com/ to get testnet ETH'",
    "faucet:goerli": "echo 'Visit https://goerlifaucet.com/ to get testnet ETH'",
    "faucet:solana": "solana airdrop 2 --url devnet",
    "monitor:events": "hardhat run scripts/event-monitor.ts",
    "health-check": "node scripts/health-check.js",
    "full-test-suite": "npm run test:contracts && npm run test:integration && npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.28.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@rainbow-me/rainbowkit": "^1.3.0",
    "@safe-global/safe-core-sdk": "^3.3.0",
    "@safe-global/safe-ethers-lib": "^1.9.0",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.32",
    "@solana/wallet-adapter-react-ui": "^0.9.31",
    "@solana/wallet-adapter-wallets": "^0.19.16",
    "@solana/web3.js": "^1.87.0",
    "bip39": "^3.1.0",
    "clsx": "^2.0.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "ethers": "^6.8.0",
    "framer-motion": "^10.16.0",
    "js-sha256": "^0.10.1",
    "lucide-react": "^0.290.0",
    "next": "^15.3.4",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "viem": "^1.19.0",
    "wagmi": "^1.4.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^20.8.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "assert": "^2.1.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "crypto-browserify": "^3.12.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.51.0",
    "eslint-config-next": "^15.3.4",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^1.0.9",
    "https-browserify": "^1.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.3",
    "process": "^0.11.10",
    "solidity-coverage": "^0.8.5",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "typechain": "^8.3.0",
    "typescript": "^5.2.0",
    "url": "^0.11.4"
  },
  "keywords": [
    "multisig",
    "wallet",
    "ethereum",
    "solana",
    "web3",
    "crypto",
    "defi",
    "security"
  ],
  "author": "MultiSig Wallet Team",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
