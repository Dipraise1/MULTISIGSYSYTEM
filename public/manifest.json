  "screenshots": [
    {
      "src": "/screenshot-mobile-1.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "OrangeFarm MultiSig Mobile Dashboard"
    },
    {
      "src": "/screenshot-mobile-2.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Create New Farm Wallet"
    },
    {
      "src": "/screenshot-desktop-1.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "OrangeFarm MultiSig Desktop Experience"
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://orangefarm-multisig.com/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+orangefarm",
      "url": "/wallet?action=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ]
} 